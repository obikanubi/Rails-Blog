<div class="container-fluid align-middle" style="padding-top: 5px">
  <div class="text-center" style="margin-bottom:50px;">
    <h1>Listing Articles</h1>
  </div>
<div class="btn-group btn-group-vertical" style="text-align:left;">
  <div class="btn btn-warning" style="text-align:left; margin-bottom:10px;">
    <%= link_to 'New article', new_article_path %>
  </div>
</div>
<table class="table table-striped table-hover ">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td style="width:70px;">
        <div class="btn btn-success btn-primary" style="width:70px;">
          <%= link_to 'Show', article_path(article) %>
        </div>
      </td>
      <td style="width:70px;">
        <div class="btn btn-info btn-primary" style="width:70px">
          <%= link_to 'Edit', edit_article_path(article) %>
        </div>
      </td>
      <td style="width:70px;">
        <div class="btn btn-danger btn-primary" style="width:70px">
          <%= link_to 'Destroy', article_path(article),
                                method: :delete,
                                data: { confirm: 'Are you sure?' } %>
        </div>
      </td>

    </tr>
  <% end %>
</table>
</div>
